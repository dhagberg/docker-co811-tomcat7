ENV CATALINA_HOME /usr/local/tomcat
ENV TOMCAT_VERS=7.0.94
ENV TOMCAT_SHA5=b16f4b08591199e15f953c34965389a80d5597c28626a51c71ce42695ddd3359dc4df7f333ef0e1a1e8f9b2b6245041d57607c46764f33e560246c119cdc0f7a
ENV TINI_VERS=0.18.0
ENV TINI_SHA5=fc8c522484613c57ed6532924f399d7b10851cf019bc687febe3ba7a77911ed2bc3aaf708a3b074a7a339bca00bccbcd99d72d15b5c3229a48cf4683c9501bc9
ENV PATH $CATALINA_HOME/bin:$PATH

COPY build/ /root/build/
RUN mkdir -p "$CATALINA_HOME"
WORKDIR $CATALINA_HOME

RUN /root/build/build_tomcat7 $BUILDTS

USER tomcat
EXPOSE 8080
CMD exec /usr/bin/tini $CATALINA_HOME/bin/catalina.sh run
